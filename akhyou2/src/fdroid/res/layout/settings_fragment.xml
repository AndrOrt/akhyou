<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/background_material_dark" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:orientation="vertical" >

            <include layout="@layout/settings_item_hummingbird"
                android:id="@+id/hummingbird_preference_item" />

            <include layout="@layout/settings_divider"/>

            <include layout="@layout/settings_item_enabled_providers"
                android:id="@+id/enabled_providers_preference_item" />

            <include layout="@layout/settings_divider" />

            <include layout="@layout/settings_item_theme"
                android:id="@+id/theme_preference_item" />

            <include layout="@layout/settings_divider" />

            <include layout="@layout/settings_item_search_grid"
                android:id="@+id/search_grid_preference_item" />

            <include layout="@layout/settings_divider" />

            <include layout="@layout/settings_item_external_download"
                android:id="@+id/external_download_item" />

            <include layout="@layout/settings_divider" />

            <include layout="@layout/settings_item_download_location"
                android:id="@+id/download_location_item" />

            <include layout="@layout/settings_divider" />

            <include layout="@layout/settings_item_open_to_last_anime"
                android:id="@+id/open_to_last_anime_preference_item" />

            <include layout="@layout/settings_divider" />

            <include layout="@layout/settings_item_licences"
                android:id="@+id/licences_preference_item" />

            <include layout="@layout/settings_divider" />

            <include layout="@layout/settings_item_contact"
                android:id="@+id/contact_preference_item" />

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/toolbar_shadow" />

</RelativeLayout>