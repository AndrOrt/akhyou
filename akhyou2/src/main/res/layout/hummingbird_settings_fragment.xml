<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:orientation="vertical"
    android:background="@color/background_material_dark">

    <include layout="@layout/hummingbird_item_username"
        android:id="@+id/username_preference_item" />

    <include layout="@layout/hummingbird_item_password"
        android:id="@+id/password_preference_item" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="This stuff does nothing but set nice pictures in your drawer."
        android:textColor="@color/white_transparent"/>

</LinearLayout>