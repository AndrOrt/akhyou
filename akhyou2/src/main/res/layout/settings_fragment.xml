    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="vertical" >

        <include layout="@layout/theme_preference_item"
            android:id="@+id/theme_preference_item" />

        <include layout="@layout/settings_divider" />

        <include layout="@layout/auto_update_preference_item"
            android:id="@+id/auto_update_preference_item"/>

        <include layout="@layout/settings_divider" />

        <include layout="@layout/licences_preference_item"
            android:id="@+id/licences_preference_item" />

        <include layout="@layout/settings_divider" />

    </LinearLayout>

    <include layout="@layout/toolbar_shadow" />

</RelativeLayout>